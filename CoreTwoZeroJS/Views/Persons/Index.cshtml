
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<style>
    .col-xs-12 {
        padding-top: 10px;
    }


        .col-xs-12 > input {
            width: 100%;
        }



    .btn {
        min-width: 150px;
    }


    .btn-block {
        width: 100%;
